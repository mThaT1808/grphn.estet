---
import './style.scss';

interface Props {
    href: string;
    size?: "md" | "lg";
    block?: boolean;
    style?: "outline" | "primary" | "inverted" | "muted";
    class?: string;
    [x: string]: any;
}

const {
    href,
    block,
    size = "lg",
    style = "primary",
    class: className,
    ...rest
} = Astro.props;
  ---

<a
    href={href}
    {...rest}
    class:list={[
        "link",
        block && "w-full",
        className,
    ]}
    ><slot />
</a>