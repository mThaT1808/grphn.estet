---
import Icon from '../Icon/Icon.astro'
import './style.scss'
---

<div class="language">
    <button class="language__button current">
        <Icon name="language" mod="white"/>
    </button>
    <ul class="language__list">
        <li class="language__item">
            <button class="language__button ru">
                <Icon name="language" mod="white"/>
            </button>
        </li>
        <li class="language__item">
            <button class="language__button language__button--select en">
                <Icon name="language-en" mod="white"/>
            </button>
        </li>
        <li class="language__item">
            <button class="language__button language__button--select be">
                <Icon name="language-be" mod="white"/>
            </button>
        </li>
    </ul>
</div>

<script src="./script.js"></script>