---
import './style.scss';

interface Props {
    TagButton?: "button" | "a";
    size?: "md" | "lg";
    block?: boolean;
    style?: "outline" | "primary" | "inverted";
    class?: string;
    [x: string]: any;
}

const {
    TagButton = "button",
    size = "md",
    style = "primary",
    block,
    class: className,
    ...rest
} = Astro.props;

