---
import './style.scss'

export interface Props {
    mod?: string;
    name?: string;
}

const { id, name, text, checked, disabled, required, class: className } = Astro.props
---

<div class:list={["radio", `${className}` ]}>
    <input class="radio__input" type="radio" id={id} name={name} autocomplete="off" checked={ checked } disabled={ disabled } required={required}>
    <label class="radio__label" for={id}>
        <span class="radio__text-label">{text}</span>
    </label>
</div>