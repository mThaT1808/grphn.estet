---
import Container from '@components/container/container.astro'
import './styles.scss'
const list = Astro.props.list;
const modifier = Astro.props.modifier;

var className = "nav";
var itemClass = "nav__item"

if (modifier) {
    className += ` nav${modifier}`
}
---

<nav class={className}>
    <Container>
        <ul class="nav__list">
            {
                list.map((item) => (
                <li class:list={{
                    'nav__item': true,
                    'nav__item--special': item.isSpecial,
                    'nav__item--background': item.isBackground,
                    'nav__item--arrow': item.isArrow
                }}>
                    <a class="nav__link" href="javascript:void(0);">{item.title}</a>
                    {item.links?
                        <ul class="nav__inner-list">
                            {item.links.map((link) => (
                                <li class="nav__inner-item">
                                    <a class="nav__link" href="javascript:void(0);">{link}</a>
                                </li>
                            ))}
                        </ul>
                    : ''}
                </li>
              ))
            }
        </ul>
    </Container>
</nav>
