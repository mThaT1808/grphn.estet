---
import Container from '@components/container/container.astro'
import './styles.scss'
const list = Astro.props.list
---

<nav class="nav">
    <Container>
        <ul class="nav__list">
            {
              list.map((item) => (
                <li class="nav__item">
                    <a class="nav__link" href="javascript:void(0);">{item.title}</a>
                    {item.links.length > 0 ? 
                        <ul class="nav__inner-list">
                            {item.links.map((link) => (
                                <li class="nav__inner-item">
                                    <a class="nav__link" href="javascript:void(0);">{link}</a>
                                </li>
                            ))}
                        </ul>
                    : ''}
                </li>
              ))
            }
        </ul>
    </Container>
</nav>
