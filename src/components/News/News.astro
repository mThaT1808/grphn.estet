---

<section class="info tab" id="tab-1">
    <Container>
        <div class="info__wrapper">
            <Title class="info">Новости и советы</Title>
            <div class="info__button-wrapper tab-nav">
                <Button class="button--news tab-btn tab-btn-active" data-target-id="0">Новости</Button>
                <Button class="button--suggestions tab-btn" data-target-id="1">Советы</Button>
            </div>
        </div>
        <div class="news tab-pane tab-pane-show" data-id="0">
            <div class="news__list">
                <div class="news__item news__item--big">
                    <div class="news__media-wrapper news__media-wrapper--big">
                        <Link class="link--news" href="javascript:void(0);">
                            <Picture
                            classPicture="news__image-group"
                            modPicture="big"
                            classImage="news__image"
                            modImage="big"
                            image="../../../images/news/ultratex-tablet.jpg"
                            srcset={[
                                {src: "../../../images/news/ultratex-tablet.webp", type: "image/webp"},
                                {src: "../../../images/news/ultratex-desktop.jpg", media: "(min-width: 768px)", type: "image/jpg"},
                                {src: "../../../images/news/ultratex-desktop.webp", media: "(min-width: 768px)", type: "image/webp"},
                            ]}
                            alt="ultratex"
                            />
                        </Link>
                    </div>
                    <div class="news__content-wrapper news__content-wrapper--big">
                        <Link class="link--news" href="javascript:void(0);">
                            <Title class="news title--news-big">Новости и СМИ о нас</Title>
                        </Link>
                        <Link class="link--info link--no-line" href="javascript:void(0);">
                            <Text class="news text--news-big">Новые продукты <span class="news__dash">-</span> коллекция покрытий Boonlayer Ultratex и Boonlayer Original</Text>
                        </Link>
                        <time class="news__time" datetime="2021-01-25">25  января 2021 г.</time>
                    </div>
                </div>
                <div class="news__slider slider--info">
                    {
                        itemsNews.map( item => (
                            <div class="news__item news__item--small">
                                <div class="news__media-wrapper">
                                    <Link class="link--news" href={item.linkHref}>
                                    {
                                        item.picture?
                                        <Picture
                                            classPicture={"news__image-group"}
                                            classImage={"news__image"}
                                            image={item.picture.image}
                                            srcset={item.picture.srcset}
                                            alt={item.picture.alt}
                                        />: item.image?
                                        <img class="news__svg" src={item.image} alt="video" width="32px" height="32px"/>: ''
                                    }
                                    </Link>
                                </div>
                                <div class="news__content-wrapper">
                                    <Link class="link--news" href="javascript:void(0);">
                                        <Title class="title title--news">{item.title}</Title>
                                    </Link>
                                    <Link class="link--info link--no-line" href="javascript:void(0);">
                                        <Text class="news">{item.text}</Text>
                                    </Link>
                                    <time class="news__time" datetime={item.dataTime}>{item.dataTimeText}</time>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
        <div class="suggestions tab-pane" data-id="1">
            <div class="suggestions__list">
                <div class="suggestions__item suggestions__item--big">
                    <div class="suggestions__media-wrapper suggestions__media-wrapper--big">
                        <Link class="link--suggestions" href="javascript:void(0);">
                            <Picture
                            classPicture="suggestions__image-group"
                            modPicture="big"
                            classImage="suggestions__image"
                            modImage="big"
                            image="../../../images/news/air.jpg"
                            srcset={[{src: "../../../images/news/air.webp", type: "image/webp"}]}
                            alt="air-doors"
                            />
                        </Link>
                    </div>
                    <div class="suggestions__content-wrapper suggestions__content-wrapper--big">
                        <Link class="link--suggestions" href="javascript:void(0);">
                            <Title class="suggestions title--suggestions-big">Совет дня</Title>
                        </Link>
                        <Link class="link--info link--no-line" href="javascript:void(0);">
                            <Text class="suggestions text--suggestions-big">Белые межкомнатные двери - какие выбрать?</Text>
                        </Link>
                        <time class="suggestions__time" datetime="2024-12-02">02  декабря 2024 г.</time>
                    </div>
                </div>
                <div class="suggestions__slider slider--info">
                    {
                        itemsSuggestion.map( item => (
                            <div class="suggestions__item suggestions__item--small">
                                <div class="suggestions__media-wrapper">
