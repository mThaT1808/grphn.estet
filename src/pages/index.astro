---
import Banner from '@components/Banner/Banner.astro';
import About from '@components/About/About.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Service from '@components/Service/Service.astro';
import Review from '@components/Review/Review.astro';
import News from '@components/News/News.astro';
import Shop from '@components/Shop/Shop.astro';
import Product from '@components/Product/Product.astro';
import Intro from '@components/Intro/Intro.astro';
import Sale from '@components/Sale/Sale.astro'
const pageTitle = "Estet | Дверные технологии";
const pageDescription = "Межкомнатные и офисные двери с богатой цветовой гаммой, стильным дизайном, различными вариантами исполнения и нестандартными размерами";
const pageKeywords = "двери, межкомнатные двери, входные двери, установка дверей";
---
<BaseLayout title={pageTitle} pageTitle={pageTitle} description={pageDescription} pageDescription={pageDescription} keywords={pageKeywords} pageKeywords={pageKeywords} >
    <!-- Первый "встречающий блок с заголовком и слайдером" -->
    <Intro />
    <!-- Прекрасный блок с прекрасно задизайнереными дверьми -->
    <Product />
    <!-- Подобрать интерьерные решения -->
    <Banner />
    <!-- слайдер со сгидоньками -->
    <Sale />
    <!-- блок с гарантией и сервисом  -->
    <Service />
    <!-- Слайдер с видеороликами -->
    <Review />
    <!-- блок с точками -->
    <About />
    <!-- новости и события слайдер -->
    <News />
    <!-- слайдер с магазинами -->
    <Shop />
</BaseLayout>