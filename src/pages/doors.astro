---
import Shop from '@components/Shop/Shop.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '@components/Card/Card.astro';
import Map from '@components/Map/Map.astro';
import Catalog from '@components/Catalog/Catalog.astro';
import Sale from '@components/Sale/Sale.astro';
import Preview from '@components/Preview/Preview.astro';
import LamelTech from '@components/LamelTech/LamelTech.astro';

const pageConfig = {
    title: 'Двери Estet | Каталог',
    description: '',
    keywords: 'цены, каталог, список товаров, межкомнатные двери',
    image: ''
};
---
<BaseLayout
    title={pageConfig.title}
    pageDescription={pageConfig.description}
    pageKeywords={pageConfig.keywords}
    pageImage={pageConfig.image}
    inner={true}
    >
    <!-- Обёртка для фильтра, списка дверей, интро-->
    <Catalog>
        <!-- Список дверей -->
        <Card />
    </Catalog>
    <!-- Слайдер со скидочками -->
    <Sale mod="inner"/>
    <!-- слайдер с видеороликами -->
    <Preview />
    <!-- слайдер с технологиями -->
    <LamelTech />
    <!-- Лучшая на свете карта -->
    <Map />
    <!-- Слайдер с магазинами -->
    <Shop title="Купить в вашем городе" mod='doors'/>
</BaseLayout>